# vLLM behind Nginx HTTPS + API-key auth

# --- API key auth: expect exact header "Authorization: Bearer <KEY>"
# api_key_value must be provided by Ansible (read from {{ api_key_file }}).
map $http_authorization $auth_ok {
    default 0;
    "Bearer {{ api_key_value }}" 1;
}

server {
    listen {{ nginx_listen_port }} ssl;
    server_name {{ tls_cn | default('_') }};

    ssl_certificate     {{ tls_crt }};
    ssl_certificate_key {{ tls_key }};

    # Reasonable TLS defaults (can be tuned)
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # --- optional: health endpoint (choose if protected or not)
    location = /healthz {
        add_header Content-Type text/plain;
        return 200 "ok\n";
    }

    # --- Enforce API key for everything else
    if ($auth_ok = 0) {
        return 401;
    }

    {% for inst in vllm_instances %}
    {% set prefix = public_prefix_map.get(inst.name, '/' ~ inst.name) %}

    # {{ inst.name }} -> http://127.0.0.1:{{ inst.port }}
    location ^~ {{ prefix }}/ {
        # strip prefix: /qwen7/v1/... -> /v1/...
        rewrite ^{{ prefix }}(/.*)$ $1 break;

        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # streaming responses
        proxy_buffering off;
        proxy_read_timeout 3600s;

        proxy_pass http://127.0.0.1:{{ inst.port }};
    }
    {% endfor %}
}